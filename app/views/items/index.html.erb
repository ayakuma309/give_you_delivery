<div>
  <h2 class="font-bold text-3xl">差し入れしたい商品を
  <span class=" text-warning">1つ</span>
  選んでください</h2>
  <% if @items.present? %>
    <%= render 'search_form', q: @q, url: items_path %>
  <% else %>
    <div class="my-3">
      商品が見つかりませんでした
    </div>
  <% end %>
</div>
<div class="rounded-lg bg-info min-h-screen py-10 px-10 ">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:gap-x-10 xl-grid-cols-4 gap-y-10 gap-x-6 ">
    <%= render @items%>
  </div>
</div>
<div class="flex justify-center my-3">
  <%= paginate @items %>
</div>
