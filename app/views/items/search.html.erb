<div>
  <div class="my-3 text-center">
    <h2 class="font-bold text-3xl"><%= @tag.name %></h2>
    <%= link_to items_path do%>
      <p class="btn btn-primary my-3">
        アイテムを選び直す
      </p>
    <% end %>
  </div>
  <div class="tag flex flex-wrap">
    <% @tags.each do |tag| %>
      <div class="btn btn-secondary ml-2">
        <%= link_to "##{tag.name}", search_path(tag_name: tag.name) %>
      </div>
    <% end %>
  </div>
  <% if @items.present? %>
    <div class="rounded-lg bg-info min-h-screen py-10 px-10 ">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:gap-x-10 xl-grid-cols-4 gap-y-10 gap-x-6 ">
        <%= render @items%>
      </div>
    </div>
  <% else %>
    <div class="my-3">
      商品が見つかりませんでした
    </div>
  <% end %>
</div>
