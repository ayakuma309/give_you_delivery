<%= form_with model: @delivery,  local: true  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <div class="form-group">
    <div class="text-left mb-1">
      <%= f.label :addressee %>
    </div>
    <div class="mb-3">
      <%= f.text_field :addressee, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="text-left mb-1">
      <%= f.label :addresser %>
    </div>
    <div class="mb-3">
      <%= f.text_field :addresser, value: current_user&.name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="text-left mb-1">
      <%= f.label :comment %>
    </div>
    <div class="mb-3">
      <%= f.text_area :comment, class: "form-control", required: true %>
    </div>
  </div>
  <div class="actions text-center mb-3">
    <%= f.submit  class: "btn btn-new w-100" %>
  </div>
<% end %>
