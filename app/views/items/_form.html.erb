<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="max-w-screen-md grid sm:grid-cols gap-4 mx-auto">
      <%= form_with model: @delivery,  local: true  do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <div>
          <%= f.label :addressee , class: "inline-block text-gray-800 text-sm sm:text-base mb-2"%>
          <%= f.text_field :addressee, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2", required: true %>
        </div>
        <div>
          <%= f.label :addresser, class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
          <%= f.text_field :addresser, value: current_user&.name, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2", required: true %>
        </div>
        <div class="sm:col-span-2">
          <%= f.label :comment , class: "inline-block text-gray-800 text-sm sm:text-base mb-2"%>
          <%= f.text_area :comment, class: "w-full h-64 bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2", required: true %>
        </div>
        <div class="sm:col-span-2 flex justify-between items-center">
          <%= f.submit class: 'btn btn-primary'%>
        </div>
    <% end %>
    </div>
  </div>
</div>
